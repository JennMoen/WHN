<body ng-controller="AccountController as account" ng-cloak>
    <div class="flex-col">
        @*flex-col ai-c*@
    @*<h1>WHN</h1>*@
    <div class="flex-row width100">
        <div class="width30 bgnd-darkpurple"></div>
        <div class="width40 place high topBar bgnd-darkpurple f-jc-c whiteBorder">
            <a ui-sref="home">Home</a>
            <a ui-sref="eventSearch">Find Events</a>
            <a ui-sref="groups">Find Groups</a>
            <a ui-sref="login" ng-show="!account.isLoggedIn()">Login</a>
            <a ui-sref="#" ng-click="account.logout()" ng-show="account.isLoggedIn()">Logout</a>
        </div>
        <div class="width30 bgnd-darkpurple font16 topBar place f-jc-fe whiteBorderLogin">
            <div class="ai-c">{{account.getUserName()}}</div>
            <ng-md-icon icon="account_box" style="fill:gray" size="40" class="ai-c"></ng-md-icon>
        </div>
    </div>
